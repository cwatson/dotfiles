"1.1

set titlestring=''
colorscheme gruvbox-dark
" Show tab numbers and toolbar
set guioptions+=nT

" Only show tab line when there are multiple tabs
set showtabline=multitab

" Disable smooth scroll
set scrollsteps=1
set scrolltime=0

" Faster movement
map -builtin j 8j
map -builtin k 8k
map -builtin l 8l
map -builtin h 8h

imap jk <Esc>

" Turn off when reading Google Docs
autocmd LocationChange 'https://docs.google.com/*' :normal! <C-z>

set findcase=smart
set incfind
set hlfind
" Remove highlighting
nmap -builtin <Leader><space> <esc>:nohlfind<CR>
loadplugins '\.(js|penta)$'
